<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.senior.com.firebaselottery">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.CheckLotteryActivity" />
        <activity android:name=".Activities.DisplayLotteriesActivity" />
        <activity android:name=".Activities.ModeSimulation.ModeSimulationActivity" />
        <activity android:name=".Activities.ModePurchase.ModePurchaseActivity" />
        <activity android:name=".Activities.ModeSimulation.AddLotterySimulationActivity" />
        <activity android:name=".Activities.ModePurchase.AddLotteryPurchaseActivity"></activity>
    </application>

</manifest>